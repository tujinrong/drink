                            @if (@Request.Url.Query.Replace("?tid=", "").Split('&').Count() != 3)
                            {
                                 @Html.Smat().Button("btnSearchReferPick").Content("選択").HtmlAttributes(new { @class = "btn-primary", @style = "vertical-align: bottom;margin-right: 12px;" }).Events(events =>
