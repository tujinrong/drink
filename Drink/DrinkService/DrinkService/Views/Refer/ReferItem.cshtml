                    @(Html.Smat().Grid("referListGrid")
                .Scrollable()
                .HtmlAttributes(new { @style = "height:422px;" })
                      .Columns(columns =>
                      {
                          columns.Bound("").DataType("checkBox-selecter").Width("40px").HtmlAttributes(new { @class = "text-center" }).CheckAll(true).SelectedDataName("selectedList");
