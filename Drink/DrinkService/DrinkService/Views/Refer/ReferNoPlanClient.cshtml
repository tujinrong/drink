<script>

    var shopCD = "@ViewBag.shopCD";
    var route = "@ViewBag.routeCD";
    var hoDate = "@ViewBag.hoDate"; 

    var routeClients = undefined;

    function getStaffList() {
        smat.service.loadJosnData({
            url: "/Staff/GetStaffList",
            params: { "ShopCD": "@ViewBag.shopCD" },
            success: function (result) {

                var emptyItem = {};
                emptyItem.staffCD = "";
                emptyItem.StaffName = "";

                result.unshift(emptyItem);

                $("#ddlEditStaff").ui().setDataSource(result);
                $("#ddlEditStaff").ui().value("@ViewBag.staffCD");

                $("#ddlEditStaffSelected").ui().setDataSource(result);
                $("#ddlEditStaffSelected").ui().value("@ViewBag.staffCD");

            }
        });
    }

    function getClientData() {
        smat.service.openLoding();
        smat.service.loadJosnData({
            url: "/DeliveryRoute/GetClientList",
            params: {
                "shopCD": shopCD,
                //"staffCD": staffCD,
                "routeCD": route,
                "hoDate": hoDate
            },
            success: function (result) {
                $("#deliveryRouteReferListGrid").ui().setDataSource(result.data);
            }
        });
    }

    function getRouteClient() {
        if ($("#ddlEditRoute").ui().value() != "") {
            smat.service.openLoding();
            smat.service.loadJosnData({
                url: "/DeliveryRoute/GetRouteClientList",
                async: false,
                params: {
                    "shopCD": shopCD,
                    "route": $("#ddlEditRoute").ui().value(),
                },
                success: function (result) {
                    routeClients = result;
                }
            });
        } else {
            routeClients = undefined;
        }

    }

    function clientDatabound(e) {
        //debugger;

        var trs = e.sender.tbody.children('tr');

        //var staffCD = $("#ddlEditStaff").ui().value();
        var staffCD = "";

        $.each(trs, function (n, value) {
            var dataItem = e.sender.dataItem($(this));

            if ((routeClients != undefined && routeClients[dataItem["ClientCD"]] == undefined)
                || (staffCD != "" && dataItem["StaffCD"] != staffCD)) {
                $(this).hide();
            } else if (dataItem.DoneFlag == "0") {
                $(this).children().eq(4).html('');
            } else if (dataItem.DoneFlag == "2") {
                $(this).children().eq(4).html('');
            }


        });
    }

    function afterSelectPlan(dataItem) {

        //if (confirm("この実績を追加してよろしいですか？") == false) {
        //    return;
        //}
        
        if ($("#ddlEditStaffSelected").ui().value() == "") {
            if (dataItem.StaffCD == null || dataItem.StaffCD == "" == "") {
                smat.service.addErrorInfo("ddlEditStaffSelected", $("#ddlEditStaffSelected"), "実績担当者を選択ください。");
            }
        } else {
            dataItem.StaffCD = $("#ddlEditStaffSelected").ui().value();
        }

        if (smat.service.isNoError() == false) {
            return;
        }

        var params = {};

        params.hoDay = {
            ShopCD: shopCD,
            HoDate: asmat.parseDate(hoDate, "yyyyMMdd"),
            Route: route
        }
        params.HoDate = hoDate;

        params.addList = new Array();
        params.addList.push(dataItem);

        smat.service.openLoding();
        smat.service.loadJosnData({
            url: "/DeliveryRoute/Save",
            params: params,
            success: function (result) {
                smat.service.notice({ msg: "追加完了しました。" });
                debugger;
                var newItem = {
                    ShopCD: shopCD,
                    ClientCD: dataItem.ClientCD == undefined ? "" : dataItem.ClientCD,
                    HoDate: asmat.toString(asmat.parseDate(hoDate, "yyyyMMdd"), "yyyy/MM/dd"),
                    Route: route,
                    StaffCD: dataItem.StaffCD,
                    FirstFlag: dataItem.FirstFlag,
                    DoneFlag: ""
                }

                smat.service.closeForm({
                    contentId: 'referNoPlanClientForm',
                    result: {
                        selectedRows: newItem
                    }
                });
            }
        });

        
    }

    var templateReferClientName = function (dataItem) {
        return "[" + dataItem.ClientCD + "] " + dataItem["ClientName"];

    }
</script>
