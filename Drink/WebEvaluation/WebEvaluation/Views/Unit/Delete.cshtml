@model WebEvaluation.Models.S_Unit

@{
    ViewBag.Title = "組織削除";
    ViewBag.color = "#2e2e2e";
    ViewBag.IMG = "../../Content/images/ic-staff.png";
}
<div class="jumbotron">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*@Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.UnitCD)*@        
         
        <div class="row" style="padding-left:80px;padding-right:80px">
            <br>
            <font color="#aaaaaa">組織基本情報</font>
            <table class=" table form-table" style="width:100%">
                <tr>
                    <td align="right" width="200px">関連社員</td>
                    <td style="border-left:1px solid #dddddd">
                        @if (ViewBag.nums > 0)
                        {
                            <div class="col-lg-12" style="line-height:32px;color:red">
                                関連社員 @ViewBag.nums 件があるので、削除することができません。
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-12" style="line-height:32px;color:green">
                                関連社員がないので、削除することができます。
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td align="right" width="200px">@Html.DisplayNameFor(model => model.UnitCD)</td>
                    <td style="border-left:1px solid #dddddd">
                        <div class="col-lg-3" style="line-height:32px;">
                            @Html.DisplayFor(model => model.UnitCD)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td align="right" width="200px">@Html.DisplayNameFor(model => model.UnitName)</td>
                    <td style="border-left:1px solid #dddddd">
                        <div class="col-lg-3" style="line-height:32px;">
                            @Html.DisplayFor(model => model.UnitName)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td align="right" width="200px">@Html.DisplayNameFor(model => model.ShopCD)</td>
                    <td style="border-left:1px solid #dddddd">
                        <div class="col-lg-3" style="line-height:32px;">
                            @Html.DisplayFor(model => model.ShopCD)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td align="right" width="200px">@Html.DisplayNameFor(model => model.IsCusCenter)</td>
                    <td style="border-left:1px solid #dddddd">
                        <div class="col-lg-3" style="line-height:32px;">
                            @Html.DisplayFor(model => model.IsCusCenter)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td align="right" width="200px">@Html.DisplayNameFor(model => model.IsShop)</td>
                    <td style="border-left:1px solid #dddddd">
                        <div class="col-lg-3" style="line-height:32px;">
                            @Html.DisplayFor(model => model.IsShop)
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                @if (ViewBag.nums > 0) {                     
                <button class="btn btn-danger btn-sm disabled" type="submit" style="width:60px">削除</button>
                }
                else { 
                <button class="btn btn-danger btn-sm" type="submit" style="width:60px">削除</button>
                }
                @Html.ButtonAction(false, "取消", "../Unit/Index/", null, new { @class = "btn btn-primary btn-sm", @Style = "width:60px" })
            </div>
        </div>
    }

</div>

