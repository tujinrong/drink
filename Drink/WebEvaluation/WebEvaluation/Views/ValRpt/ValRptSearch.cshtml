                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr id="tr_shop" class="tr-disable">
                    <td class="text-left"><label class="edit-title">@Html.RadioButtonFor("Range", ViewBag.Range as string, "shop", null) &nbsp;店舗：</label></td>
