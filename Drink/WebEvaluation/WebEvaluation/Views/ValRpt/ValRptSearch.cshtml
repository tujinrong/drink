                        {
                            <th class="text-center" style="border-left:1px solid #dddddd">事業部</th>
                            <th class="text-center" style="border-left:1px solid #dddddd">グループ</th>
                        }
                        <th class="text-center" style="border-left:1px solid #dddddd">店舗名</th>
                        
                        @if (null != show && show.Contains("eva"))
                        {
                        <th class="text-center" style="border-left:1px solid #dddddd">SS</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">S</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">A</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">B</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">C</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">D</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">E</th>
                        <th class="text-center" style="border-left:1px solid #dddddd">F</th>
                        }
