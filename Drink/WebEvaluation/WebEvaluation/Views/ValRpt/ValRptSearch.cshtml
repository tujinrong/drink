                </tr>
            </table>
        </div>
        <div class="col-lg-6">
            <div class="row"><font color="#aaaaaa">&nbsp;&nbsp;&nbsp;表示順</font></div>
            <table class="table form-table" >
                <tr >
                    <td colspan="7" align="left">
                        <label class="edit-title">
                            @Html.RadioButtonFor("Sort", ViewBag.Sort as string, "shop", null)&nbsp;店舗順&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </label>
