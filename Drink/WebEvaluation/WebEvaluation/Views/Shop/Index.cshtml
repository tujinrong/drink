@model IEnumerable<WebEvaluation.Models.M_Shop>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h2>店舗一覧</h2>
        </div>
    </div>
</div>

<p>
    <ul class="nav nav-pills">
        <li class="bg-success">
            @Html.ActionLink("新規作成", "Create")
        </li>    
    </ul>
</p>
<table class="table table-striped table-hover ">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.ShopName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaCD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceCD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DivCD)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="info">
            <td>
                @Html.DisplayFor(modelItem => item.ShopName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DivCD)
            </td>
            <td>
                @Html.ActionLink("修正", "Edit", new { id = item.ShopCD }) |
                @Html.ActionLink("詳細", "Details", new { id = item.ShopCD }) |
                @Html.ActionLink("削除", "Delete", new { id = item.ShopCD })
            </td>
        </tr>
    }

</table>
