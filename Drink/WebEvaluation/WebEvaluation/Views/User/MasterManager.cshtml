@model PagedList.IPagedList<WebEvaluation.ViewModels.StaffViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "社員マスタ";
}
<body>
    <div class="jumbotron">
        <!--社員マスタ＆BUTTON--->
        @using (Html.BeginForm("MasterManager", "User", FormMethod.Get, new { @class = "form-horizontal" }))
        {
        <br>            
        <!--条件検索-->
        <h3 class="panel-title"><font color="#4d4d4d">条件検索</font></h3>
        <table class="table table-striped table-hover " border="0">
            <tr>
                <td align="right" width="80px">組織名：</td>
                <td width="10%">
                    <select class="form-control input-sm">
                        <option>　　</option>
                        <option>AB</option>
                        <option>TG</option>
                    </select>
                </td>
                <td align="right" width="120px">社員コード：</td>
                <td width="10%">
                    <input id="inputSmall" class="form-control input-sm" size="10" type="text">
                </td>
                <td align="right" width="100px">氏名漢字：</td>
                <td width="10%">
                    <input id="inputSmall" class="form-control input-sm" size="10" type="text">
                </td>
                <td align="right" width="100px">氏名カナ：</td>
                <td width="10%">
                    <input id="inputSmall" class="form-control input-sm" size="10" type="text">
                </td>
                <td></td>
            </tr>
        </table>
        <div class="row">
                <div class="col-lg-12 text-center">
                    <button type="submit" class="btn btn-primary btn-sm">&nbsp;検&nbsp;&nbsp;索&nbsp;</button>
                    @Html.ButtonAction(true, "CSV出力", "/csv", new { }, new { @class = "btn btn-success btn-sm" })
                </div>
            </div>
        }
        <!--社員一覧-->
        <h3 class="panel-title"><font color="#4d4d4d">社員一覧</font></h3>
        <table class="table table-striped table-hover text-center" border="1">
            <thead>
                <tr>
                    <th class="text-center">現在組織</th>
                    <th class="text-center" width="8%">社員コード</th>
                    <th class="text-center">氏名漢字</th>
                    <th class="text-center">氏名カナ</th>
                    <th class="text-center" width="5%">性別</th>
                    <th class="text-center" width="10%"> 入社年月日</th>
                    <th class="text-center">役職</th>
                    <th class="text-center">職種</th>
                    <th class="text-center">権限</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr class="" style="background-color:white">
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.UnitCD)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.StaffCD)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.StaffName)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.StaffKana)
                    </td>
                    <td>
                        男
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duty)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.RoleCD)
                    </td>
                    <td>
                        @Html.ButtonAction(false, "詳細", "../Staff/Index/" + null,null,new { @class = "btn btn-primary btn-xs" })
                    </td>
                </tr>
            }
        </table>

        @*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@

        @Html.PagedListPager(Model, page => Url.Action("MasterManager",
                                                                          new { page }))
    </div>
</body>

