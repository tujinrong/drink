@{
    ViewBag.Title = "";
    Layout = "";
}

<section class="panel panel-default">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-fix-1 form-group">
                    <label class="input-s-sm control-label">Base TextBox:</label>
                    @{
                        var hehe = "\\\\";
                        
                    }

                    @Html.Smat().TextBox("base_text").Value(hehe)
                    </div>
            </div>
            <div class="row">
                <div class="col-fix-1 form-group">
                    <label class="input-s-sm control-label">Phone number:</label>
                    @Html.Smat().TextBox("phone_number").Mask("(999) 000-0000").Value("555 123 4567")
                </div>
            </div>
            <div class="row">
                <div class="col-fix-1 form-group">
                    <label class="input-s-sm control-label">Credit Card number:</label>
                    @Html.Smat().TextBox("credit_card").Mask("0000 0000 0000 0000").Value("1234 1234 1234 1234")
                </div>
            </div>
            <div class="row">
                <div class="col-fix-1 form-group">
                    <label class="input-s-sm control-label">Social security number:</label>
                    @Html.Smat().TextBox("ssn").Mask("000-00-0000").Value("003-12-3456")
                </div>
            </div>
            <div class="row">
                <div class="col-fix-1 form-group">
                    <label class="input-s-sm control-label">UK postcode:</label>
                    @Html.Smat().TextBox("postcode").Mask("L0L 0LL").Value("W1N 1AC")
                </div>
            </div>

        </div>
    </div>
</section>

<div class="m-b-md">
    <h3 id="demo-type-title" class="m-b-none">Elements</h3>

    <div class="other-source">
        <h4>demo also available for:</h4>
        <ul id="other-source-ul"></ul>
    </div>

</div>

<!-- =====================以下是code显示区域 =====================-->
