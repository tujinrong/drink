@{
    ViewBag.Title = "";
    Layout = "";
}

<section class="panel panel-default">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-fix-2 form-group">
                    @(Html.Smat().RadioButton("radiobutton")
                          .Name("radioname")
                          .Label("单选框")
                          .DataSource(new List<object>() { 
                            new{text="AAA",value="1"},
                            new{text="BBB",value="2"},
                            new{text="CCCCCCCCCC",value="3"},
                          })
                          .Value("2")
                    )
                </div>
            </div>
            <div class="row">
                <div class="col-fix-2 form-group">
                    <button type="button" class="btn-primary s-button" id="get" style="margin-left:180px;">Get Value</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        var radioBtn = $("#radiobutton").ui();

        $("#get").click(function () {
            alert('Thank you! Your Choice is:\n\n Text: ' + radioBtn.text() + ' and Value: ' + radioBtn.value());
        });
    });
</script>
